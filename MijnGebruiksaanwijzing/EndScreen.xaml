<Window x:Class="MijnGebruiksaanwijzing.EndScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MijnGebruiksaanwijzing"
        mc:Ignorable="d"
        Title="EndScreen" Height="450" Width="800">
    <Grid>
        <Image Source="IMG/summa_logo.jpg" Width="175" Height="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></Image>
        <Button x:Name="btn_terug" Background="Purple" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="40" FontSize="30" Width="200" Height="80" Click="btn_terug_Click">Hoofd menu</Button>
        <StackPanel Margin="0,0,0,-100" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button FontSize="20" Margin="0,0,0,10" Height="60" x:Name="btn_export" Background="Purple" Foreground="White" Click="btn_export_Click">Exporteren</Button>
            <Button FontSize="20" Margin="0,0,0,10" Height="60" x:Name="btn_stuurmentor" Background="Purple" Foreground="White">Doorsturen naar mentor</Button>
            <Button FontSize="20" Margin="0,0,0,10" Height="60" x:Name="btn_skip" Background="Purple" Foreground="White">Overslaan</Button>
        </StackPanel>
    </Grid>
</Window>
