<Window x:Class="MijnGebruiksaanwijzing.GameScreenRood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MijnGebruiksaanwijzing"
        mc:Ignorable="d"
        Title="GameScreenRood" Height="450" Width="800">
    <Grid>
        <Image Source="IMG/summa_logo.jpg" Width="175" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></Image>
        <Canvas  Width="150" Height="150">
            <Image Source="IMG/school/school_rood.png" Width="150" Height="150" Stretch="Fill"/>
            <TextBlock Canvas.Left="10" Canvas.Top="55" Height="85" Width="130" TextAlignment="Center" TextWrapping="Wrap">Ik kom vaak te laat bij de les.</TextBlock>
        </Canvas>
        <Button x:Name="btn_pastwel" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" Height="50" Width="200" Background="Green" Foreground="White">Past bij mij</Button>
        <Button x:Name="btn_pastniet" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20" Height="50" Width="200" Background="Red" Foreground="White">Past niet bij mij</Button>

    </Grid>
</Window>
